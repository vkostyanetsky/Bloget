{% extends "wrapper.html" %}

{% block content %}

        <article class="rounded-2xl bg-white">
          <a id="note-well-there-are-some" class="block scroll-mt-24"></a>

          <header class="space-y-2">

            {% if page_title and page_path %}
            <h1 class="text-3xl font-semibold tracking-tight">{{ page_title }}</h1>
            {% endif %}

            {% if stacks %}
            <div class="flex flex-wrap items-center gap-x-3 gap-y-2 text-sm text-slate-600">

                <div class="flex flex-wrap gap-2">
                {% for stack in stacks %}
                    <span
                    class="inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-2.5 py-1 text-xs text-slate-700"
                    >
                    {{ stack }}
                    </span>
                {% endfor %}
                </div>
            </div>
            {% endif %}
          </header>

          <div class="mt-5">
            <div class="prose-like">
              {{ page_text | safe }}
            </div>

          </div>
        </article>

{% endblock %}