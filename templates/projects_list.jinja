{% extends "wrapper.html" %}

{% block content %}

    {{ macros.page_header(page_title, language['projects_description']) }}

      <section class="mt-8 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center">
          <div class="relative w-full sm:w-[360px]">
            <input
              id="search"
              type="search"
              placeholder="{{ language['projects_search_tooltip'] }}"
              class="w-full rounded-xl border border-slate-200 bg-white px-4 py-2.5 pr-10 text-sm text-slate-900 placeholder:text-slate-400 outline-none transition focus:border-slate-400"
            />
            <svg
              class="pointer-events-none absolute right-3 top-1/2 h-5 w-5 -translate-y-1/2 text-slate-400"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="m21 21-4.35-4.35m1.35-5.65a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"
              />
            </svg>
          </div>

          <div class="flex gap-2">
            <button
              id="btnGrid"
              class="rounded-xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm text-slate-800 transition hover:bg-slate-100"
              aria-pressed="true"
            >
              {{ language['projects_grid'] }}
            </button>
            <button
              id="btnList"
              class="rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-700 transition hover:bg-slate-50"
              aria-pressed="false"
            >
              {{ language['projects_list'] }}
            </button>
          </div>
        </div>

        <p class="text-sm text-slate-600">
          {{ language['shown'] }}: <span id="count" class="font-semibold text-slate-900">0</span>
        </p>
      </section>

      <section class="mt-4 flex flex-wrap gap-2">
      
        <button
          data-chip="all"
          class="chip rounded-full border border-slate-200 bg-slate-100 px-3 py-1.5 text-xs text-slate-900 hover:bg-slate-200"
        >
          {{ language['all'] }}
        </button>

        {% for stack in stacks %}
        <button
          data-chip="{{ stack }}"
          class="chip rounded-full border border-slate-200 bg-white px-3 py-1.5 text-xs text-slate-700 hover:bg-slate-50"
        >
          {{ stacks[stack] }}
        </button>
        {% endfor %}

      </section>

      <section
        id="cards"
        class="mt-8 grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3"
      ></section>

      <div
        id="empty"
        class="mt-8 hidden rounded-2xl border border-slate-200 bg-slate-50 p-8 text-center text-slate-700"
      >
        {{ language['not_found'] }}
      </div>

    <script>
      const projects = [
        {% for project in projects %}
        {
          title: "{{ project.title }}",
          description: "{{ project.description }}",
          image: "{{ settings.get('url') }}/projects/{{ project.folder_name }}/thumbnail.png",
          badges: [
            {% for stack in project.metadata.stacks %}
            "{{ stacks[stack] }}",
            {% endfor %}
          ],          
          stacks: [
            {% for stack in project.metadata.stacks %}
            "{{ stack }}",
            {% endfor %}
          ],
          href: "{{ project.folder_name }}",
        },
        {% endfor %}
      ];

  const cardsEl = document.getElementById("cards");
  const countEl = document.getElementById("count");
  const emptyEl = document.getElementById("empty");
  const searchEl = document.getElementById("search");

  const btnGrid = document.getElementById("btnGrid");
  const btnList = document.getElementById("btnList");

  let mode = "grid";
  let chip = "all";

  // ------------------------------------------------------------
  // Session state:
  // - persists on F5 / reload
  // - cleared when tab/browser is closed
  // ------------------------------------------------------------
  const STATE_KEY = "projects_ui_state_v1";

  function saveState() {
    try {
      sessionStorage.setItem(STATE_KEY, JSON.stringify({ mode, chip }));
    } catch (_) {}
  }

  function loadState() {
    try {
      const raw = sessionStorage.getItem(STATE_KEY);
      if (!raw) return null;
      return JSON.parse(raw);
    } catch (_) {
      return null;
    }
  }

  function escapeHtml(str) {
    return String(str)
      .replaceAll("&", "&amp;")
      .replaceAll("<", "&lt;")
      .replaceAll(">", "&gt;")
      .replaceAll('"', "&quot;")
      .replaceAll("'", "&#039;");
  }

  function escapeAttr(str) {
    return escapeHtml(str).replaceAll("\n", " ");
  }

  const badge = (text) => `
    <span class="inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-2.5 py-1 text-xs text-slate-700">
      ${escapeHtml(text)}
    </span>
  `;

  function applyMode(nextMode) {
    mode = nextMode;

    if (mode === "grid") {
      btnGrid.className =
        "rounded-xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm text-slate-800 transition hover:bg-slate-100";
      btnList.className =
        "rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-700 transition hover:bg-slate-50";
      btnGrid.setAttribute("aria-pressed", "true");
      btnList.setAttribute("aria-pressed", "false");
    } else {
      btnList.className =
        "rounded-xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm text-slate-800 transition hover:bg-slate-100";
      btnGrid.className =
        "rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-700 transition hover:bg-slate-50";
      btnList.setAttribute("aria-pressed", "true");
      btnGrid.setAttribute("aria-pressed", "false");
    }
  }

  function applyChip(nextChip) {
    chip = nextChip;

    document.querySelectorAll(".chip").forEach((x) => {
      x.className =
        "chip rounded-full border border-slate-200 bg-white px-3 py-1.5 text-xs text-slate-700 hover:bg-slate-50";
    });

    const active = document.querySelector(`.chip[data-chip="${CSS.escape(chip)}"]`);

    if (active) {
      active.className =
        "chip rounded-full border border-slate-200 bg-slate-100 px-3 py-1.5 text-xs text-slate-900 hover:bg-slate-200";
    } else {
      chip = "all";
      const allBtn = document.querySelector(`.chip[data-chip="all"]`);
      if (allBtn) {
        allBtn.className =
          "chip rounded-full border border-slate-200 bg-slate-100 px-3 py-1.5 text-xs text-slate-900 hover:bg-slate-200";
      }
    }
  }

  function card(project) {
    const stacksHtml = (project.badges || []).map(badge).join("");

    const body = `
      <div class="flex flex-col gap-3 p-4">
        <div class="flex items-start justify-between gap-3">
          <a href="{{ settings.get('url') }}/{{ page_path }}/${project.href}" class="inline text-2xl font-semibold tracking-tight hover:underline">
            <h3 class="text-lg font-semibold leading-snug tracking-tight">${escapeHtml(project.title)}</h3>
          </a>
        </div>

        <p class="text-sm text-slate-700 ${mode === "grid" ? "line-clamp-3" : "line-clamp-2"}">
          ${escapeHtml(project.description)}
        </p>

        <div class="flex flex-wrap gap-2">${stacksHtml}</div>
      </div>
    `;

    if (mode === "list") {
      return `
        <article class="group overflow-hidden rounded-2xl border border-slate-200 bg-white transition hover:bg-slate-50">
          <div class="flex flex-col md:flex-row">
            <div class="md:w-[320px]">
              <img
                src="${project.image}"
                alt="${escapeAttr(project.title)}"
                class="h-48 w-full object-cover md:h-full"
                loading="lazy"
              />
            </div>
            <div class="flex-1">${body}</div>
          </div>
        </article>
      `;
    }

    return `
      <article class="group overflow-hidden rounded-2xl border border-slate-200 bg-white transition hover:bg-slate-50">
        <img
          src="${project.image}"
          alt="${escapeAttr(project.title)}"
          class="h-44 w-full object-cover"
          loading="lazy"
        />
        ${body}
      </article>
    `;
  }

  function render() {
    const q = (searchEl.value || "").trim().toLowerCase();

    const filtered = projects.filter((p) => {
      const matchesChip = chip === "all" ? true : (p.stacks || []).includes(chip);
      const haystack = `${p.title} ${p.description} ${(p.badges || []).join(" ")}`.toLowerCase();
      return matchesChip && (q ? haystack.includes(q) : true);
    });

    countEl.textContent = String(filtered.length);

    if (filtered.length === 0) {
      cardsEl.innerHTML = "";
      emptyEl.classList.remove("hidden");
      return;
    }

    emptyEl.classList.add("hidden");

    cardsEl.className =
      mode === "grid"
        ? "mt-8 grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3"
        : "mt-8 grid grid-cols-1 gap-4";

    cardsEl.innerHTML = filtered.map(card).join("");
  }

  // -----------------------
  // Events
  // -----------------------
  btnGrid.addEventListener("click", () => {
    applyMode("grid");
    saveState();
    render();
  });

  btnList.addEventListener("click", () => {
    applyMode("list");
    saveState();
    render();
  });

  searchEl.addEventListener("input", render);

  document.querySelectorAll(".chip").forEach((b) => {
    b.addEventListener("click", () => {
      applyChip(b.dataset.chip);
      saveState();
      render();
    });
  });

  // -----------------------
  // Init (restore state, then render)
  // -----------------------
  const st = loadState();

  if (st?.mode === "grid" || st?.mode === "list") applyMode(st.mode);
  else applyMode("grid");

  if (typeof st?.chip === "string") applyChip(st.chip);
  else applyChip("all");

  render();
    </script>

{% endblock %}
